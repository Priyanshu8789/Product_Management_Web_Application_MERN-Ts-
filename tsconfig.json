{
  "compilerOptions": {
    "target": "ES2020",                          // Modern JavaScript features
    "module": "CommonJS",                        // Node.js module system
    "rootDir": "./src",                          // Your TypeScript source files
    "outDir": "./dist",                          // Where compiled JS goes
    "esModuleInterop": true,                     // Enables default import compatibility
    "forceConsistentCasingInFileNames": true,
    "strict": true,                              // Enable all strict type checks
    "skipLibCheck": true,                        // Skip type checks on node_modules
    "typeRoots": ["./node_modules/@types", "./src/types"],  // Include custom types
    "resolveJsonModule": true,                   // Allow importing JSON files
    "moduleResolution": "node",                  // Resolve modules like Node
    "noImplicitAny": true,                       // Avoid variables with `any` type
    "allowSyntheticDefaultImports": true         // Allow default imports for CommonJS modules
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
